<Window x:Class="WPF_EXAM_1.DescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_EXAM_1"
        mc:Ignorable="d"
        Title="DescriptionWindow" Height="200" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Width"></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Height"></Label>
        <Label Grid.Row="2" Grid.Column="0" Content="Size"></Label>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Value}"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ElementName=c2, Path=Value}"></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ElementName=txt, Path=Text}"></TextBlock>
    </Grid>
</Window>
