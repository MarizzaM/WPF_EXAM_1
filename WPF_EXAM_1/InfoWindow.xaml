<Window x:Class="WPF_EXAM_1.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_EXAM_1"
        mc:Ignorable="d"
        Title="InfoWindow" Height="200" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Width" Margin="10"></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Height" Margin="10"></Label>
        <Label Grid.Row="2" Grid.Column="0" Content="Text" Margin="10"></Label>
        <Label Grid.Row="0" Grid.Column="1" Content="{Binding WidthValue}" Margin="10"></Label>
        <Label Grid.Row="1" Grid.Column="1" Content="{Binding HeightValue}" Margin="10"></Label>
        <Label Grid.Row="2" Grid.Column="1" Content="{Binding Text}" Margin="10"></Label>
    </Grid>
</Window>
